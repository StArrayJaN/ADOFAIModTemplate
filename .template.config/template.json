{
  "$schema": "http://json.schemastore.org/template",
  "author": "StArray",
  "classifications": [
    "ADOFAI",
    "UMM",
    "Mod",
    "Game"
  ],
  "identity": "StArray.ADOFAIModTemplate",
  "name": "Base ADOFAI Mod Template",
  "shortName": "adofaimod",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ADOFAIModTemplate",
  "preferNameDirectory": true,
  "symbols": {
    "ModDescription": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "A Dance of Fire and Ice Mod Template",
      "defaultValue": "My ADOFAI Mod",
      "description": "Mod 的描述"
    },
    "Author": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "Your Name",
      "defaultValue": "Anonymous",
      "description": "作者名称"
    },
    "Version": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "1.0.0",
      "defaultValue": "1.0.0",
      "description": "初始版本号"
    },
    "GameExePath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "GAME_EXE_PATH_PLACEHOLDER",
      "isRequired": true,
      "description": "游戏 exe 路径（必填，用于添加程序集引用，自动部署和启动）"
    },
    "ValidateGameExePath": {
      "type": "computed",
      "value": "(GameExePath != \"\" && GameExePath != \"GAME_EXE_PATH_PLACEHOLDER\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "bin/**",
            "obj/**",
            "out/**",
            ".vs/**",
            ".idea/**",
            ".git/**",
            ".gitignore",
            "*.user",
            "*.suo",
            "*.sln",
            "*.sln.DotSettings.user",
            "*.nupkg",
            "*.snupkg",
            "*.Template.csproj",
            "pack.bat",
            "TestModProject/**",
            "README.md"
          ]
        }
      ]
    }
  ]
}